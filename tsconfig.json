{
  "compileOnSave": true,
  "compilerOptions": {
      "lib": ["es6"],
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "dist",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "strictNullChecks": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
